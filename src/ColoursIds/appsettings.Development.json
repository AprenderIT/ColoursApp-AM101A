{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=AspIdUsers.db;"
  },
  "IdentityServer": {
    "Clients": [
      {
        "Id": "web",
        "Name": "WebClient",
        "RedirectUri": "https://localhost:44382/signin-oidc",
        "LogoutRedirectUri": "https://coloursweb.app.aprender.it/signout-callback-oidc",
        "AllowedGrantTypes": [ "authorization_code" ],
        "AllowedScopes": [ "openid", "profile", "api1" ],
        "AllowOfflineAccess": "true",
        "Secret": "secret"
      },
      {
        "Id": "apim",
        "Name": "APIMClient",
        "RedirectUri": "https://am101a-pdiloreto-apim.developer.azure-api.net/signin-oauth/implicit/callback",
        "LogoutRedirectUri": "https://coloursweb.app.aprender.it/signout-callback-oidc",
        "AllowedGrantTypes": [ "implicit" ],
        "AllowedScopes": [ "openid", "profile", "api1" ],
        "AllowOfflineAccess": "true",
        "Secret": "secret"
      }
    ]
  }
}